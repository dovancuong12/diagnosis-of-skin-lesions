# Cấu hình môi trường cho hệ thống chẩn đoán tổn thương da
# Sao chép file này thành .env và điền các giá trị phù hợp

# Cấu hình cơ sở dữ liệu
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=skin_lesion

# Cấu hình Redis
REDIS_URL=redis://localhost:6379/0

# Cấu hình ứng dụng
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skin_lesion
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cấu hình JWT
JWT_SECRET_KEY=another-very-secure-secret-key-here
JWT_REFRESH_SECRET_KEY=refresh-secret-key-here

# Cấu hình hệ thống tệp
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Cấu hình email (nếu cần)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cấu hình hệ thống lưu trữ
STORAGE_BACKEND=local  # local, s3, azure
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1
AZURE_STORAGE_ACCOUNT=your-account-name

# Cấu hình hệ thống logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Cấu hình hệ thống cache
CACHE_TTL=3600  # 1 hour in seconds

# Cấu hình hệ thống worker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Cấu hình hệ thống ML
MODEL_PATH=./models/effb3.onnx
CALIBRATION_PATH=./models/calibration_T.json

# Cấu hình hệ thống API
API_V1_STR=/api/v1
PROJECT_NAME=Skin Lesion Diagnosis System
VERSION=1.0.0

# Cấu hình hệ thống CORS
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:3000", "http://127.0.0.1:3000"]
